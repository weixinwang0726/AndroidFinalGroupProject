<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/r_drawer"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".recipe.RecipeActivity">

    <include
        layout="@layout/recipe_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


  <!--navigation drawer with help menu toolbar-->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/r_nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/recipe_header"
        app:menu="@menu/recipe_help_menu"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText_searchkeyword"
            android:layout_width="wrap_content"
            android:text="@string/r_search_keyword"
            android:hint="@string/r_search_keyword"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:layout_weight="1"
            android:textSize="15sp" />
        <Button
            android:id="@+id/searchRecipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/r_search_btn"
            android:textSize="24sp" />




    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>


